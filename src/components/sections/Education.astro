---
import Section from "@/components/Section.astro";
import { education } from "@cv";
---

<Section title="Education">
    <ul>
        {
            education.map(
                ({ institution, area, studyType, yearOfCompletion, pais }) => {
                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{area}</h3>
                                    </div>
                                </header>

                                <footer>
                                    <span>{institution}, {pais}-{yearOfCompletion}</span>
                                </footer>
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

</style>
